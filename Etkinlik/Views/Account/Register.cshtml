@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <title>Kayıt Ol</title>
    @Html.Partial("~/Views/metaTag.cshtml");
    <script type="text/javascript" src="~/js/RegexControl.js"></script>
</head>
<body>
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="heading" style="text-align: center;">

                        <strong>Register to continue..</strong>


                    </div>

                    <hr class="colorgraph">

                    <div class="panel-body">

                        <section>
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <fieldset>
                                    <h4>Create a new account.</h4>
                                    <div class="row">
                                        <div class="center-block">
                                            <center>
                                                <i class="fa fa-user-plus" style="font-size:80px">

                                                </i>
                                            </center>
                                            <br />
                                        </div>
                                        
                                        <div class="col-sm-12 col-md-10  col-md-offset-1">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-envelope "></i>
                                                    </span>


                                                    <input id="mailBox" onfocusout="regexEmail()" asp-for="Email" class="form-control" placeholder="Enter e-mail" />

                                                </div>
                                                <span id="emailSpan" style="display:none" class="text-danger">Geçersiz EMail adresi giriniz</span>

                                            </div>

                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-user "></i>
                                                    </span>

                                                    <input id="fullNameBox" onfocusout="regexName()" asp-for="FullName" class="form-control" placeholder="Enter Username" />

                                                </div>
                                                <span id="fullNameSpan" style="display:none" class="text-danger">Geçersiz isim</span>

                                            </div>


                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input id="passwordBox" onfocusout="regexPassword()" asp-for="Password" class="form-control" minlength="5" placeholder="Enter password" />

                                                </div>
                                                <span id="passwordSpan" style="display:none" class="text-danger">Geçersiz Şifre</span>
                                            </div>




                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input id="passwordAgainBox" onfocusout="passwordAgain()" asp-for="ConfirmPassword" class="form-control" minlength="5" placeholder="Enter password again" />

                                                </div>
                                                <span id="passwordAgainSpan" style="display:none" class="text-danger">Şifreler uyuşmuyor</span>
                                            </div>
                                       
                                                <button type="submit" class="btn btn-default" style="background-color:#eee; margin-left: 40%;margin-right: 50%; width:70px; height:40px">Register</button>
                                           
                                        </div>

                                    </div>
                                </fieldset>
                                <div class=" navbar navbar-fixed-bottom ">
                                    <footer>
                                        <p>&nbsp;&copy;  2018 - Etkinlik</p>
                                    </footer>
                                </div>
                            </form>
                        </section>
                    </div>

                    @section Scripts {
                        @await Html.PartialAsync("_ValidationScriptsPartial")
                    }

                </div>
            </div>
        </div>
    </div>
</body>
</html>
